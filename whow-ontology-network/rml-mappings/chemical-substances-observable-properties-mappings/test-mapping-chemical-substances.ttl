## LOGICAL SOURCES TO BE USED
##########################################################

# #LogicalSourceSostanzeChimiche
<#LogicalSourceChemicalSubstances> a rml:BaseSource ;
    rml:source [
      a csvw:Table;
      #csvw:url "Monitoraggio_laghi_dati_puliti.csv";
      csvw:url "chemical-substances-complete.csv";

      csvw:dialect [
        a csvw:Dialect;
        csvw:delimiter ","
      ]
    ];
    rml:referenceFormulation ql:CSV .

############# CSMapping ###########


<#ChemicalSubstancesMapping> a rr:TriplesMap ;
rml:logicalSource <#LogicalSourceChemicalSubstances> ;
rr:subjectMap [
  rr:template "chemical-substance/cas-{CAS}";
  rr:termType rr:IRI;
  rr:class w-mon:ChemicalSubstance
] ;
rr:predicateObjectMap [
  rr:predicate rdfs:label;
  rr:objectMap [ rr:template "{PARAMETER(IT)} â€” Codice CAS: {CAS}" ; rr:language "it" ]
];
rr:predicateObjectMap [
  rr:predicate skos:prefLabel;
  rr:objectMap [ rr:template "{EC Name}" ; rr:language "en"]
];
rr:predicateObjectMap [
  rr:predicate skos:altLabel;
  rr:objectMap [ rr:template "{PARAMETER(IT)}" ; rr:language "it"]
];
rr:predicateObjectMap [
  rr:predicate core:hasUniqueIdentifier;
  rr:objectMap [   rr:template "https://w3id.org/environmental-data/data/chemical-substances/identifier/{CAS}"; rr:termType rr:IRI;]
];
rr:predicateObjectMap [
  rr:predicate rdfs:seeAlso;
  rr:objectMap [  rr:template "{Infocard URL}";  rr:termType rr:IRI; ] #link EC alla risorsa
];
rr:predicateObjectMap [
  rr:predicate skos:notation;
  rr:objectMap [  rr:template "CAS: {CAS}" ]
].



<#UniqueIDMapping> a rr:TriplesMap ;
rml:logicalSource <#LogicalSourceChemicalSubstances> ;
rr:subjectMap [
  rr:template "identifier/{CAS}";
  rr:termType rr:IRI;
  rr:class w-mon:UniqueIdentifier
] ;
rr:predicateObjectMap [
  rr:predicate core:identifier;
  rr:objectMap [ rr:template "{CAS}"; rr:datatype xsd:string ]
];
;
rr:predicateObjectMap [
  rr:predicate skos:acronym;
  rr:objectMap [  rr:template "CAS"; rr:datatype xsd:string ]
];
rr:predicateObjectMap [
  rr:predicate core:isIssuedBy;
  rr:objectMap [ rr:template "American Chemical Society"; rr:datatype xsd:string ]
].
